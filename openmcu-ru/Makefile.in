#
# Makefile
#
# Make file for OpenMCU-ru
#

PREFIX          = @INSTALLPREFIX@
MACHTYPE	= ${@MACHTYPE@:-x86}
PROG		= openmcu-ru
SOURCES		:= main.cxx video.cxx conference.cxx filemembers.cxx custom.cxx h323.cxx html.cxx mcu.cxx sip.cxx
HDRS		:= conference.h config.h filemembers.h h323.h mcu.h version.h sip.h

LDLIBS		= @LDLIBS@
STDCCFLAGS	= -I../h323plus/include -I/usr/include/freetype2 -I/usr/include/sofia-sip-1.12 -D__STDC_CONSTANT_MACROS

ifndef OPENH323DIR
OPENH323DIR=../h323plus
endif

include $(OPENH323DIR)/openh323u.mak

CONFIG_FILES=capability.conf \
layouts.conf \
members.conf \
ffserver.conf

RESOURCE_FILES=i15_mic_on.gif \
i24_clr.gif \
openmcu.ru_vad_chosenvan.gif \
i20_close.gif \
i24_left.gif \
openmcu.ru_vad_disable.gif \
i20_plus.gif \
i24_mix.gif \
openmcu.gif \
openmcu.ru_vad_vad.gif \
i20_static.gif \
i24_revert.gif \
openmcu.ru_drop_Abdylas_Tynyshov.gif \
i15_inv.gif \
i20_vad2.gif \
i24_right.gif \
openmcu.ru_launched_Ypf.gif \
i15_mic_off.gif \
i20_vad.gif \
i24_shuff.gif \
openmcu.ru_remove.gif \
template.html \
quote.txt \
Russo_One.ttf

install:
	mkdir -p @MCU_BIN_DIR@
	mkdir -p @MCU_CONFIG_DIR@
	mkdir -p @MCU_PIPE_DIR@
	mkdir -p @MCU_LOG_DIR@
	mkdir -p @MCU_RECORDS_DIR@
	mkdir -p @MCU_FONT_DIR@
	mkdir -p @MCU_RESOURCE_DIR@
	( for file in ${CONFIG_FILES}; \
	    do $(INSTALL) -m 644 conf/$$file @MCU_CONFIG_DIR@; \
	done )
	( for file in ${RESOURCE_FILES}; \
	    do $(INSTALL) -m 644 conf/$$file @MCU_RESOURCE_DIR@; \
	done )
	$(INSTALL) -m 755 obj_linux_$(MACHTYPE)_r/$(PROG) @MCU_BIN_DIR@
	rm -f @INSTALLPREFIX@/openmcu
	rm -f @INSTALLPREFIX@/openmcu-ru
	ln -s @MCU_BIN_DIR@/$(PROG) @INSTALLPREFIX@/openmcu
	ln -s @MCU_BIN_DIR@/$(PROG) @INSTALLPREFIX@/openmcu-ru
	$(INSTALL) -m 755 conf/web_stream_start @MCU_BIN_DIR@
	$(INSTALL) -m 755 conf/ffmpeg @MCU_BIN_DIR@
	$(INSTALL) -m 755 conf/ffserver @MCU_BIN_DIR@
	$(INSTALL) -m 755 conf/web_stream_start @MCU_BIN_DIR@
	$(INSTALL) -m 755 custom/openmcu-wrapper @INSTALLPREFIX@
	$(INSTALL) -m 644 custom/openmcu.ini @MCU_CONFIG_DIR@

uninstall:
	( for file in ${RESOURCE_FILES}; \
	    do rm -f @MCU_RESOURCE_DIR@/$$file; \
	done )
	( for file in ${CONFIG_FILES}; \
	    do rm -f @MCU_CONFIG_DIR@/$$file; \
	done )
	rm -f @MCU_BIN_DIR@/$(PROG)
	rm -f @MCU_BIN_DIR@/ptlib-config
	rm -f @INSTALLPREFIX@/openmcu
	rm -f @INSTALLPREFIX@/openmcu-ru
	rm -f @MCU_BIN_DIR@/ffmpeg
	rm -f @MCU_BIN_DIR@/ffserver
	rm -f @MCU_BIN_DIR@/web_stream_start
	rm -f @INSTALLPREFIX@/openmcu-wrapper
	rm -f @MCU_CONFIG_DIR@/openmcu.ini
